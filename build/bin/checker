#!/usr/bin/env bash
# Based off of (but not taken from) https://stackoverflow.com/a/246128/11326662

this="${BASH_SOURCE[0]}"
while [ -L "$this" ]; do
  link_dir="$( cd -P "$( dirname "$this" )" >/dev/null 2>&1 && pwd )"
  this="$(readlink "$this")"
  if [[ $this != /* ]]; then this="$link_dir/$this"; fi
done
java -cp "$( cd -P "$( dirname "$this" )" >/dev/null 2>&1 && pwd )/../lib/*" io.github.liambloom.tests.book.bjp3.Main "$@"